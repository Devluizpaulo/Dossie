/**
 * Core Philosophy: This ruleset enforces a strict user-ownership model,
 * but provides an exception for a master administrator role ('admin_master')
 * to have read-only access for governance and auditing purposes.
 *
 * Data Structure: All data is nested hierarchically under /users/{userId}.
 * This path-based ownership model simplifies security rules by making the
 * user's ID a direct part of the resource path, eliminating the need for
 * complex cross-document reads (`get()`) for authorization.
 *
 * Key Security Decisions:
 * - Admin Read Access: An 'admin_master' can list and get any user document,
 *   which is essential for administrative dashboards.
 * - User Enumeration Prevention: For non-admin users, listing the top-level
 *   `/users` collection is explicitly disallowed to protect user privacy.
 * - Strict Ownership for Writes: A user can only write to data within their
 *   own document tree (i.e., `/users/{their_own_userId}/...`). Admins cannot
 *   impersonate or write on behalf of users through these rules.
 * - Profile Self-Creation: An authenticated user is permitted to create their
 *   own profile document, but only if the document ID matches their UID.
 *
 * Structural Segregation: The separation of user profiles (`/users`) from
 * their sensitive data (`/accessAttempts`) into a parent/subcollection
 * structure provides clear, secure, and performant access control.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper Functions
    // ----------------

    /**
     * Checks if the user is authenticated.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * Checks if the currently authenticated user's ID matches the provided userId.
     * This is the foundation of the ownership model.
     */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /**
     * Checks if the authenticated user has the 'admin_master' custom claim.
     * This grants system-wide read privileges.
     */
    function isAdminMaster() {
      return isSignedIn() && request.auth.token.role == 'admin_master';
    }

    /**
     * A robust check for update/delete operations, ensuring the user is the owner
     * AND the document they are trying to modify actually exists.
     */
    function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
    }

    // Validation Functions for Create Operations
    // ------------------------------------------

    /**
     * Validates the core fields for a new User document.
     * Ensures the document's internal `id` matches the document's path ID.
     * The role must be 'user' on creation by a user.
     */
    function hasValidUserCreateData(userId) {
      let data = request.resource.data;
      return data.id == userId &&
             data.role == 'user' &&
             data.email is string;
    }

    /**
     * Validates the core fields for a new AccessAttempt document.
     * Ensures internal IDs (`id`, `userId`) match the document's path.
     */
    function hasValidAccessAttemptCreateData(userId, accessAttemptId) {
      let data = request.resource.data;
      return data.id == accessAttemptId && data.userId == userId;
    }

    // Validation Functions for Update Operations
    // ------------------------------------------

    /**
     * Enforces immutability for critical fields on a User document.
     * The unique user ID and role should never change after creation,
     * except by a trusted backend process (not covered here).
     */
    function hasValidUserUpdateData() {
      return request.resource.data.id == resource.data.id &&
             request.resource.data.role == resource.data.role;
    }

    /**
     * Enforces immutability for critical fields on an AccessAttempt document.
     * The unique ID and the parent user ID link must never change.
     */
    function hasValidAccessAttemptUpdateData() {
      let incomingData = request.resource.data;
      let existingData = resource.data;
      return incomingData.id == existingData.id && incomingData.userId == existingData.userId;
    }


    // Collection Rules
    // ================

    /**
     * @description Manages user profile documents. A user can create, read,
     *   update, and delete their own profile. An 'admin_master' can read any
     *   user's profile and list all users.
     * @path /users/{userId}
     * @allow (get) An admin can get any user profile. A regular user can only get their own.
     * @allow (list) An admin can list all users. Regular users cannot.
     * @deny (get) A user with UID 'user123' cannot get the profile for 'user456'.
     * @principle Restricts access to a user's own data, with an exception for admin read access.
     */
    match /users/{userId} {
      allow get: if isOwner(userId) || isAdminMaster();
      allow list: if isAdminMaster(); // CRITICAL: Only admin can list users.
      allow create: if isOwner(userId) && hasValidUserCreateData(userId);
      allow update: if isExistingOwner(userId) && hasValidUserUpdateData();
      allow delete: if isExistingOwner(userId);

      /**
       * @description Manages a user's access attempt records. Access is strictly
       *   limited to the owner of the parent user document. Admins can also read.
       * @path /users/{userId}/accessAttempts/{accessAttemptId}
       * @allow (list) An authenticated user 'user123' can list their own access attempts.
       * @allow (get) An admin can read any user's access attempts.
       * @deny (get) An authenticated user 'user456' cannot read attempts for 'user123'.
       * @principle Enforces strict document ownership via path-based security, with admin read-only override.
       */
      match /accessAttempts/{accessAttemptId} {
        allow get: if isOwner(userId) || isAdminMaster();
        allow list: if isOwner(userId) || isAdminMaster();
        allow create: if isOwner(userId) && hasValidAccessAttemptCreateData(userId, accessAttemptId);
        allow update: if isExistingOwner(userId) && hasValidAccessAttemptUpdateData();
        allow delete: if isExistingOwner(userId);
      }
    }
  }
}
